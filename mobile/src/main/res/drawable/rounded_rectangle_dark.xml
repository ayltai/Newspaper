<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@android:integer/config_shortAnimTime"
    android:exitFadeDuration="@android:integer/config_shortAnimTime">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/primaryColorDark" />
            <solid android:color="@color/primaryColorDark" />
            <padding
                android:left="@dimen/space16"
                android:right="@dimen/space16"
                android:top="@dimen/space8"
                android:bottom="@dimen/space8" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/primaryColorDark" />
            <solid android:color="@color/primaryColorDark" />
            <padding
                android:left="@dimen/space16"
                android:right="@dimen/space16"
                android:top="@dimen/space8"
                android:bottom="@dimen/space8" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/textColorDark" />
            <padding
                android:left="@dimen/space16"
                android:right="@dimen/space16"
                android:top="@dimen/space8"
                android:bottom="@dimen/space8" />
        </shape>
    </item>
</selector>
