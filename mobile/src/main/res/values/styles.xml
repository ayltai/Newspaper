<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="Source"
        parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>
    <style name="Source.Normal">
        <item name="android:textSize">@dimen/textNormal</item>
    </style>
    <style name="Source.Small">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    <style name="Source.Full">
        <item name="android:maxLines">2147483647</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/textNormal</item>
    </style>
    <style
        name="Subhead"
        parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/textColorHint</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>
    <style name="Subhead.Normal">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    <style name="Subhead.Small">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    <style name="Subhead.Full">
        <item name="android:maxLines">2147483647</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    <style
        name="Title"
        parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>
    <style name="Title.Featured">
        <item name="android:padding">@dimen/space16</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/textHeading</item>
        <item name="android:textColor">@color/textColorInverseLight</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowColor">@color/shadowEnd</item>
    </style>
    <style name="Title.Cozy">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/textHeading</item>
    </style>
    <style name="Title.Compact">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
    </style>
    <style name="Title.Full">
        <item name="android:layout_marginLeft">@dimen/space16</item>
        <item name="android:layout_marginStart">@dimen/space16</item>
        <item name="android:layout_marginRight">@dimen/space16</item>
        <item name="android:layout_marginEnd">@dimen/space16</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">2147483647</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/textHeading</item>
    </style>
    <style
        name="Description"
        parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/textColorHint</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>
    <style name="Description.Cozy">
        <item name="android:maxLines">5</item>
        <item name="android:textSize">@dimen/textNormal</item>
    </style>
    <style name="Description.Compact">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/textNormal</item>
    </style>
    <style name="Description.Full">
        <item name="android:layout_marginLeft">@dimen/space16</item>
        <item name="android:layout_marginStart">@dimen/space16</item>
        <item name="android:layout_marginRight">@dimen/space16</item>
        <item name="android:layout_marginEnd">@dimen/space16</item>
        <item name="android:maxLines">2147483647</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>
    <style
        name="Button"
        parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
    </style>
    <style name="Button.Primary">
        <item name="colorButtonNormal">?attr/primaryColor</item>
    </style>
    <style
        name="Button.Dialog"
        parent="@style/Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textColor">?attr/textColorHint</item>
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
    </style>
    <style name="Button.Dialog.Primary">
        <item name="android:textColor">?attr/textColorDialog</item>
    </style>
    <style
        name="Icon"
        parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="Icon.Small">
        <item name="android:layout_width">@dimen/iconSmall</item>
        <item name="android:layout_height">@dimen/iconSmall</item>
    </style>
    <style
        name="TransparentText"
        parent="@android:style/TextAppearance">
        <item name="android:textColor">#00ffffff</item>
    </style>

    <!-- ExoPlayer -->
    <style name="ExoPlayerControlButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>
    <style name="ExoPlayerControlItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/space8</item>
        <item name="android:paddingStart">@dimen/space8</item>
        <item name="android:paddingRight">@dimen/space8</item>
        <item name="android:paddingEnd">@dimen/space8</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#bebebe</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- About -->
    <style name="AboutContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="AboutIcon">
        <item name="android:layout_width">@dimen/iconSmall</item>
        <item name="android:layout_height">@dimen/iconSmall</item>
        <item name="android:layout_margin">@dimen/space8</item>
        <item name="android:scaleType">center</item>
        <item name="android:tint">?attr/textColorHint</item>
    </style>
    <style name="AboutAction">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/space8</item>
    </style>
    <style name="AboutSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginRight">@dimen/space8</item>
        <item name="android:layout_marginEnd">@dimen/space8</item>
        <item name="android:layout_marginTop">@dimen/space8</item>
        <item name="android:layout_marginBottom">@dimen/space8</item>
        <item name="android:background">?attr/textColorHint</item>
    </style>
</resources>
