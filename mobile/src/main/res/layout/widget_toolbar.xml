<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/detailed_image_height_max">
    <com.github.piasy.biv.view.BigImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detailed_image_height_max"
        android:background="?attr/placeholderImage"
        app:initScaleType="centerCrop" />
    <FrameLayout
        android:id="@+id/title_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/featured_title_height"
        android:background="@drawable/bg_news_featured"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/title"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"
            style="@style/Title.Featured" />
    </FrameLayout>
</RelativeLayout>
